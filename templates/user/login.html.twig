{% extends 'base.html.twig' %}
{% block body %}

    <h1>Connexion !</h1>

    <form action="{{ path('user_login') }}" method="post">
        <div class="form-group">
                <input placeholder="Adresse email" required name="_username" type="text">
        </div>
        <div class="form-group">
            <label>
                <input placeholder="Mot de passe" required name="_password" type="password">
            </label>
        </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Con</button>
        </div>
    </form>
    <div>
        <a  href="{{ path('app_forgotten_password') }}">Mot de passe oublier ?</a>
    </div>
{% endblock %}