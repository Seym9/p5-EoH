{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block body %}

    <div class="col-md-6 security-form">
        {% for message in app.session.flashbag.get('success',[0]) %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
        {% endfor %}
        <div class="login-dark p-3 shadow-lg rounded">
            <div class="pt-3">
                <h2 class="text-white ">Connexion </h2>
            </div>

            <form class="mt-5" action="{{ path('user_login') }}" method="post">
                <div class="form-group">
                    <input type="text"
                           class="form-control form-control-sm bg-light"
                           placeholder="Adresse email"
                           required name="_username">
                </div>

                <div class="form-group">
                    <input type="password"
                           class="form-control form-control-sm bg-light"
                           placeholder="Mot de passe"
                           required name="_password">
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="rememberCheckBox" name="_remember_me">
                    <label class="form-check-label text-light" for="rememberCheckBox">Se souvenir de moi</label>
                </div>

                <div class="mt-5">
                    <button class="btn btn-sm btn-light col" type="submit">
                        Se connecter
                    </button>
                </div>

                <div class="text-center mt-2">
                    <a href="{{ path('app_forgotten_password') }}" class="text-warning">Mot de passe oublier ?</a>
                </div>

                <div class="mt-5">
                    <p class="text-white text-center">
                        Pas de compte ?
                        <a href="{{ path('user_registration')}}" class="text-warning">Inscrivez-vous !</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

