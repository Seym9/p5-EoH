{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/creation.css') }}">
{% endblock %}
{% block body %}

            <div class="panel panel-primary">
                <div class="panel-body">
                    {{ form_start(form, {'attr': {'class': 'inscription-form'}}) }}
                    <div class="form-group text-center">
                        <h2>Inscription</h2>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.username, {'label': 'Nom d\'utilisateur *', 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email, {'label': 'Adresse email *', 'attr': {'placeholder': 'Adresse email'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password, {'label': 'Mot de passe *', 'attr': {'placeholder': 'Mot de passe'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.confirm_password, {'label': 'Confirmer mot de passe *', 'attr': {'placeholder': 'Mot de passe'}}) }}
                    </div>
                    <div class="form-group">
                        {% if app.session.flashBag.has('notice') %}
                            {% for msg in app.session.flashBag.get('notice') %}
                                <div class="alert alert-danger">
                                    {{ msg }}
                                </div>
                            {% endfor %}
                        {% endif %}
                        {{ form_row(form.image, {'attr': {'class': 'custom-file-name'}}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create your account</button>
                    </div>
                    <hr>
                    <p>Vous avez déjà un compte ? <a href="{{ path('user_login') }}" class="text-warning">Connectez-vous</a></p>

                    <p class="text-danger mt-3">* champs obligatoire</p>
                    {{ form_end(form) }}
                </div>
            </div>

{% endblock %}
{% block footer %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script src="{{ asset('js/inputFix.js') }}"></script>
{% endblock %}