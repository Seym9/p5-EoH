{% extends 'base.html.twig' %}
{% form_theme formTopic 'bootstrap_4_layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/formCreation.css') }}">
{% endblock %}
{% block title %}Créer un sujet !{% endblock %}
{% block body %}

    <div class="form-creation p-4 mb-3">
        <h1 class="title-creation-page mt-5 text-center">Créer votre sujet sur le forum !</h1>

        {{ form_start(formTopic) }}

        {{ form_row(formTopic.name, {'attr': {'placeholder': 'titre'}}) }}
        {{ form_row(formTopic.category) }}
        {{ form_row(formTopic.content,{'attr': {'placeholder': 'contenu',  'class': 'editor'}}) }}

        <button type="submit" class="btn btn-success mb-5">Ajouter l'article</button>

        {{ form_end(formTopic) }}
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/m4qzhaq03qnt02y3ound5ezanr4pkeviniqg102r49217omn/tinymce/5/tinymce.min.js"></script>
    <script src="{{ asset('js/editor.js') }}"></script>
    <script src="{{ asset('js/fr_FR.js') }}"></script>
{% endblock %}