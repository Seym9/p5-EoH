{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">
                    Tous les articles
                </h1>
                <div class="row">
                    <div class="col-md-10">
                    </div>
                    <div class="col-md-2">
                        <div class="dropdown">

                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown">
                                Choisir une catégorie
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Toutes les catégories</a>
                                {% for categorie in categories %}
                                    <a class="dropdown-item" href="#">{{ categorie.name }}</a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    {% for article in articles %}
                        <div class="col-md-4">
                            <div class="jumbotron">
                                {% if article.image.name is defined %}
                                <img src="{{ asset('img/uploaded-img/article-img/')~article.image.name }}" alt="" style="max-width: 150px;max-height: 150px;">
                                    {% else %}
                                    <p>Pas d'image</p>
                                {% endif %}
                                <h3>
                                    {{ article.name }}
                                </h3>
                                <p>
                                    {{ article.content | striptags | slice(0, 100) }}
                                </p>
                                <p>
                                    <a class="btn btn-primary btn-large" href="{{ path('articleRead', {'id': article.id}) }}">Learn more</a>
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div>
        <ul class="pagination pagination-sm">
            {%  if page > 1 %}
                <li class="page-item disabled">
                    <a class="page-link" {{path('article',{'page': page-1}) }}>&laquo;</a>
                </li>

                <li class="page-item">
                    <a class="page-link" href="{{path('article',{'page': page-1}) }}" >{{ page - 1}}</a>
                </li>
            {% endif %}
            <li class="page-item active">
                <a class="page-link" href="{{path('article',{'page': page}) }}" >{{ page}}</a>
            </li>
            {%  if page < nb_pages %}
                <li class="page-item">
                    <a class="page-link" href="{{path('article',{'page': page+1}) }}" >{{ page + 1}}</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{path('article',{'page':page+1 }) }}" >&raquo;</a>
                </li>
            {% endif %}
        </ul>
    </div>
{% endblock %}
