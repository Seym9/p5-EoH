{% extends 'base.html.twig' %}

{% block title %}Hello Discord{% endblock %}

{% block body %}
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('img/home/slider-1.jpg') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('img/home/slider-2.jpg') }}" alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="row">
        <div class="border-primary mb-3 col-md-7">
            Derni√®re news
            <div class="card">
                <div class="card-header"><h3>{{ articles.name }}</h3></div>
                <div class="card-body">
                    <p class="card-text">{{ articles.content | striptags | slice(0, 100) }}</p>
                    <a href="{{ path('articleRead', {'id': articles.id}) }}" class="btn btn-primary">Lire la suite</a>
                </div>
            </div>

        </div>
        <div class="col-md-5">
            Sujets populaires
            <div class="card">
                {% for topic in topics %}
                    <p>{{ topic.name }}</p>
                    <p> commentaires : {{ topic.topicsComments | length }}</p>
                    <a href="{{ path('topic_view', {'id': topic.id}) }}" class="btn btn-primary">Lire</a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
