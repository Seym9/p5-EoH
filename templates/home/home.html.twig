{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}
{% block title %}Earth , our heart{% endblock %}

{% block header %}

    <header>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="10000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="{{ asset('img/home/slider-1.jpg') }}" alt="First slide">
                    <div class="carousel-caption col-lg-3 col-md-5  m-auto">
                        <p>Vous en avez marre de voir l'état de la planète se dégrader ?</p>
                        <a class=" btn btn-danger btn-lg" href="#carouselExampleControls" role="button" data-slide="next">Agissez</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="{{ asset('img/home/slider-2.jpg') }}" alt="Second slide">
                    <div class="carousel-caption col-lg-3 col-md-5 m-auto">
                        <p>Commencer à changer les choses</p>
                        <a class=" btn btn-success btn-lg" href="{{ path('user_registration') }}">Rejoignez-nous</a>
                    </div>
                </div>
            </div>

            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </header>
{% endblock %}
{% block body %}
    <div class="row" id="home-content">
        <div class="border-primary mb-3 col-md-7">
            <h2>Dernières news</h2>
            <div class="card col-md-12">
                <div class="card-header"><h3>{{ articles.name }}</h3></div>
                {% if articles.image.name is defined %}
                <img src="{{ asset('img/uploaded-img/article-img/')~articles.image.name }}" alt="" class="img-responsive home-image-article">
                {% else %}
                {% endif %}
                <div class="card-body">
                    <p class="card-text">{{ articles.content | striptags | slice(0, 550) }} . . .</p>
                    <a href="{{ path('articleRead', {'id': articles.id}) }}" class="btn btn-primary">Lire la suite</a>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <h2>Derniers sujets</h2>
            <ul class="list-group">
                {% for topic in topics %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ topic.name }}
                        <span class="badge badge-primary badge-pill">{{ topic.topicscomments | length }}</span>
                    </li>
                    <a href="{{ path('topic_view', {'id': topic.id}) }}" class="btn btn-primary">Lire</a>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
